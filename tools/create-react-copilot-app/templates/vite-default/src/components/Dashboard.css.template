.Dashboard {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.Dashboard h2 {
  margin-bottom: 1rem;
  color: #333;
  font-size: 1.8rem;
}

.Dashboard p {
  margin-bottom: 2rem;
  color: #666;
  line-height: 1.5;
}

.Dashboard-cards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}

@media (max-width: 768px) {
  .Dashboard {
    padding: 1rem;
  }
  
  .Dashboard-cards {
    grid-template-columns: 1fr;
  }
}