{
  "name": "@sschepis/react-copilot",
  "version": "0.1.0",
  "description": "Dynamic React app assistance through AI-powered chat interface",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https:/github.com/sschepis/react-copilot"
  },
  "scripts": {
    "rename-jsx-files": "find src -name \"*.ts\" -exec grep -l \"<.*>\" {} \\; | xargs -I{} bash -c 'mv \"$1\" \"${1%.ts}.tsx\"' -- {}",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "npm run build",
    "docs:prepare": "chmod +x scripts/prepare-docs-for-jekyll.js && node scripts/prepare-docs-for-jekyll.js",
    "docs:dev": "npm run docs:prepare && bundle exec jekyll serve",
    "docs:build": "npm run docs:prepare && bundle exec jekyll build"
  },
  "keywords": [
    "react",
    "llm",
    "ai",
    "ui",
    "dynamic",
    "chat",
    "openai",
    "claude",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "acorn": "^8.8.2",
    "acorn-jsx": "^5.3.2",
    "acorn-walk": "^8.2.0",
    "d3": "^7.8.5",
    "esbuild": "^0.19.2",
    "eventsource-parser": "^1.0.0",
    "jekyll": "^3.0.0-beta1",
    "lodash": "^4.17.21",
    "mobx": "^6.13.7",
    "nanoid": "^4.0.2",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/d3": "^7.4.3",
    "@types/lodash": "^4.14.196",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.10",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.8",
    "rollup": "^3.21.4",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.0.4"
  }
}
